<h1>New micropost</h1>

<% form_for(@micropost) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content, :size => "24x5" %>
  </p>
  <p>
    <%= f.label :user_id %><br />
    <%= f.select :user_id, options_for_select(get_user_id_n_name), :prompt=>'user id' %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', microposts_path %>
